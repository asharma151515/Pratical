BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        TextInput:
            id: input_number
            hint_text: "Enter number"
            input_filter: 'float'
            multiline: False

        Button:
            text: "Square"
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: "Result"
            color: (1, 0.5, 0.5, 1)  # RGBA for pink

    Label:
        text: "Enter a number and press 'Square'"
        size_hint_y: None
        height: '30dp'
        padding: [10, 10]