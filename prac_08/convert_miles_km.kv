BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            hint_text: 'Enter miles'
            input_filter: 'float'  # Only allow float input

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.increment_miles()

            Button:
                text: 'Down'
                on_press: app.decrement_miles()

    Button:
        text: 'Convert'
        on_press: app.convert_miles_to_km()

    Label:
        text: app.conversion_result  # Bind the label to the result property
        font_size: 24

    Button:
        text: 'Clear'
        on_press: app.clear_input_and_result()